
<h1>Match History</h1>

<%# filterrific filter form %>
<%= form_for_filterrific @filterrific do |f| %>

 <div>
  Matches
  <%= f.select(:with_id, Match.all.options_for_select, 
    { include_blank: '- All -' }, multiple: true, size: 10 ) %>
 </div>

 <%# :sorted_by filter: order the results how you like %>
 <div>
   Sorted by
    <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by]) %>
 </div>

 <%# Click to reset filters to default %>
 <div>
  <%= link_to 'Reset filters', reset_filterrific_url %>
 </div>

 <%# Include the javascript glue to make it work %>
 <%= render_filterrific_spinner %>
<% end %>

<%# actual results go here %>
<%= render( partial: 'matches/list', locals: { players: @players } ) %>


<br>

<%= link_to 'New Match', new_match_path %>
</body>
